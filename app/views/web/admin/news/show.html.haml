%h2= @news.title
= @news.content.html_safe

- content_for :submenu do
  %li= link_to t(".new_link"), new_admin_news_path
  %li= link_to t(".edit_link"), edit_admin_news_path(@news)
  %li= link_to t(".destroy_link"), admin_news_path(@news), method: :delete, data: {confirm: t(".confirm_destroy")}

- content_for :left do
  = link_to t(".back_link"), admin_news_index_path