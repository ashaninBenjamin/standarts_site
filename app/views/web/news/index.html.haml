%h1= t(".header")
.squiggly-border

- if @news.any?
  %table.table
    - @news.each do |one|
      %tr
        %td
          %text.title= link_to one.title, one
           
          %em= (l one.created_at, format: "%d %B в %R")
          %p{style: "margin-bottom: 12px;"}
          = one.content.html_safe
- else
  = t(".no_one_news")
