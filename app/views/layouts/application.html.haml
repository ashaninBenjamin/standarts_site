!!!
%html
  %head
    %title Стандарты компании
    = render "layouts/stylesheet"
  %body
    #outer
      - if signed_in? && current_user.correct?
        - if current_user.super_admin?
          = render "layouts/admin/header"
        - else
          = render "layouts/header"
      #content
        #primaryContentContainer
          #primaryContent
            = render "layouts/submenu"
            - flash.each do |key, value|
              %div{:class => "flash #{key}"}= value
            = yield
            = debug(params) if Rails.env.development? && false
        - if signed_in?
          #secondaryContent
            = render "layouts/left_column"
        .clear
      = render "layouts/footer"
